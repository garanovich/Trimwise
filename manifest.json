{
  "manifest_version": 3,
  "name": "ChatGPT Lag Fixer â€“ Auto-hide old messages in long chats",
  "version": "1.1",
  "description": "Hides all but the last 50 messages in chatGPT",
  "permissions": ["storage"],
  "host_permissions": ["https://chatgpt.com/*"],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "options_page": "options.html"
}

